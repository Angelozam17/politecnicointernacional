/*--------------------------

  Globales

---------------------------*/

*
  box-sizing: border-box

html
  font-size: 62.5% //Hace que todos los rem sean de tama√±o de 10 px (Dependiendo si el navegador tiene por defecto 16px)

body
  margin:  0
  padding: 0
  font-family: 'Raleway', sans-serif
  color: #2b3e51
  background-color: #ffffff


a
  color #2c97de
  text-decoration: none

ul
  list-style: none

/*-----------------------------

  Formulario

------------------------------*/

.form
  width: 90%
  max-width: 600px
  margin 4em auto
  &::after
    clear: both
    content: ""
    display: table
  
  fieldset
    //margin 24px 0
    border none

    legend
      display block
      width: 100%
      margin-bottom  10px
      padding-bottom 20px
      font-size 2rem
      border-bottom 1px solid #ecf0f1

    div
      //position: relative
      margin 20px 0

      .div-input
        position relative
        margin-top: 10px

        i
          position absolute
          top 50%
          left 10.5px
          margin-top -10.5px
          font-size 20px
          color #cfd9db

      .label
        display block
        //margin-bottom 10px
        font-size 1.3rem
        font-weight: 300
        color #94aab0
        position relative
        &::after
          position absolute
          top -10px
          content "*"
          color: brown
          font-size: 3em
          z-index 1

      input 
      label
      select
        font-family:inherit


      input[type="text"]
      input[type="email"]
      input[type="number"]
      input[type="date"]
      input[type="tel"]
      input[type="password"]
      select
        display block
        width 100%
        padding 12px
        padding-left 40px
        border 1px solid #cfd9db
        border-radius .30em
        outline: none
        background-color #ffffff
        box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.08)
        /*-webkit-appearance: none;
        -moz-appearance: none;
        -ms-appearance: none;
        -o-appearance: none;
        appearance: none;*/

        &:focus
          //outline none
          border-color #2c97de
          box-shadow: 0 0 10px rgba(44, 151, 222, 0.2)

      input:invalid
        border 1px solid brown
        background-color: lighten(brown, 95%)
      
      input:valid
        border 1px solid lightgreen
        background-color: lighten(green, 95%)
      
      input[type="radio"]
        position absolute
        top 50%
        left 0
        margin-top -7px

    .datos-personales__btn
      display flex
      
      input[type="submit"]
      input[type="reset"]
        width: 100%
        margin 0 10px
        padding 16px
        border none
        border-radius 10px
        color #ffffff
        background-color: #2c97de
        cursor pointer

        &:hover
          background-color: #42a2e1
        &:active
          transform scale(0.9)

      

    .datos-personales__document
      .form-list
        list-style: none
        position relative
        li
          display: inline-block
          position relative
          margin 0 26px 16px 0
          padding-left 25px



      



